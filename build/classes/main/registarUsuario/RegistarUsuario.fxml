<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="usuarioForm" alignment="CENTER" prefHeight="550.0" prefWidth="800.0" style="-fx-border-color: #6a8d92;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.registarUsuario.RegistarUsuarioController">
   <children>
      <Label text="Registar Usuário" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="38.0" />
         </font>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <VBox prefHeight="245.0" prefWidth="798.0" style="-fx-border-color: #6a8d92;">
         <children>
            <HBox prefHeight="51.0" prefWidth="600.0">
               <children>
                  <Label text="Nome" textAlignment="RIGHT" textFill="#060d3f" wrapText="true" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label text="Apelido" textFill="#060d3f" wrapText="true">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="310.0" top="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="77.0" prefWidth="600.0">
               <children>
                  <TextField fx:id="nomeU" prefWidth="35.0" promptText="Ex.: Cátia" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="apelidoU" prefWidth="35.0" promptText="Ex.: Adão" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox prefHeight="51.0" prefWidth="600.0">
               <children>
                  <Label text="Número de Matricula" textAlignment="RIGHT" textFill="#060d3f" wrapText="true" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label text="Endereço" textFill="#060d3f" wrapText="true">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="170.0" top="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="77.0" prefWidth="600.0">
               <children>
                  <TextField fx:id="matriculaU" prefWidth="35.0" promptText="Ex.: 20200618" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="enderecoU" prefWidth="35.0" promptText="Ex.: Luanda - Cazenga" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox prefHeight="51.0" prefWidth="600.0">
               <children>
                  <Label text="Nome de Usuário" textAlignment="RIGHT" textFill="#060d3f" wrapText="true" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label text="Senha" textFill="#060d3f" wrapText="true">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="205.0" top="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="130.0" prefWidth="800.0">
               <children>
                  <TextField fx:id="usernameU" prefWidth="35.0" promptText="Ex.: catiaadao" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="senhaU" prefWidth="35.0" promptText="Ex.: SenhaSEgura" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox prefHeight="130.0" prefWidth="800.0">
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="15.0" />
         </VBox.margin>
      </VBox>
      <HBox alignment="CENTER" prefHeight="48.0" prefWidth="800.0">
         <children>
            <Button fx:id="guardarUsuario" mnemonicParsing="false" onAction="#btnRegistarUsuario" style="-fx-background-color: #060d3f; -fx-border-color: #6a8d92; -fx-border-radius: 2px solid;" text="Guardar" textFill="WHITE" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets top="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
